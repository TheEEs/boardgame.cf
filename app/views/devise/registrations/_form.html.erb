<%= form_for(resource, as: resource_name, url: registration_path(resource_name),method: :put, html: {class: 'ui form'}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "User Name" %> <i>(chỉ sử dụng ký tự không dấu, số, chấm (.) hoặc gạch dưới ( _ ))</i><br />
          <%= f.text_field :name  %>
        </div>

        <div class="field">
          <%= f.label :phone %><br />
          <%= f.text_field :phone  %>
        </div>

        <div class="field">
          <%= f.label :intro %><br />
          <%= f.text_area :intro  %>
        </div>

        <div class="field" style='display:none'>
          <%= f.label :avatar %><br />
          <%= f.file_field :avatar, accept:'image/*'  %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class='ui horizontal divider'>Đổi mật khẩu</div>
        <div class="field">
          <%= f.label :password , "Mật khẩu"%> <i>(bỏ trống nếu bạn không muốn thay đổi)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em>tối thiểu <%= @minimum_password_length %> ký tự</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Xác nhận mật khẩu" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <div class="two fields">
            <div class="four wide tablet field">
              <%= f.submit "Cập nhật", class:'ui primary button' %>
            </div>
            <div class="field">
              <%= link_to "Xóa tài khoản của tôi", registration_path(resource_name), data: { confirm: "Bạn chắc chứ?" }, method: :delete, class:'ui red inverted button' %>
            </div>
          </div>
        </div>
      <% end %>