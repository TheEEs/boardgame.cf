<% content_for(:title, "Đăng ký - boardgame.cf") %>
<div class='ui centered grid sixteen wide column'>
  <div class='row'>
    <h2>Thành viên mới? Đăng ký ngay</h2>
  </div>
  <div class="row">
    <div class='sixteen wide mobile ten wide tablet nine wide computer nine wide largescreen column'>
      <section class='ui segment'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: 'ui form'}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :name, "User Name" %> <i>(chỉ sử dụng ký tự không dấu, số, chấm (.) hoặc gạch dưới ( _ ))</i><br />
            <%= f.text_field :name  %>
          </div>

          <div class="field">
            <%= f.label :phone, "Số điện thoại" %><br />
            <%= f.text_field :phone  %>
          </div>
          <div class='field'>
            <%= f.label :address do  %>
              Địa chỉ của tôi
              <button id='location-get-button' class='ui mini green icon circular button'>
                <i class='map marker alt icon'></i>
              </button>
              (tự động định vị)
            <% end %>
            <div class='ui left icon input' id="location-input-field">
              <%= f.text_field :address, id:'location-text-field', class:"ui left icon input loading", placeholder: "Ha Noi, Viet Nam ; Thanh Pho Hai Phong" %>
              <i class="map marker alt icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :intro, "Giới thiệu về bản thân" %><br />
            <%= f.text_area :intro  %>
          </div>

          <div class="field">
            <%= f.label :password, "Mật khẩu" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Nhập lại mật khẩu" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Đăng ký" %>
          </div>
        <% end %>
      </section>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
