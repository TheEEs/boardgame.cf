<%= form_with(model: order, local: true, class:"ui form") do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Họ tên" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address, "Địa chỉ" %>
    <%= form.text_field :address, placeholder: "The Coffee House , Highland Coffee , ..etc.." %>
  </div>

  <div class="field">
    <%= form.label :phone ,"Số  điện thoại" %>
    <%= form.text_field :phone %>
  </div>

  <div class="two fields">
    <%= form.datetime_select :when , {use_hidden: true} %>
    <div class="field">
      <%= form.label :date_hour, "Giờ"%>
      <%= select_hour Time.now,{default: order.when}, class:'ui dropdown'%>
    </div>

    <div class="field">
      <%= form.label :date_minute, "Phút"%>
      <%= select_minute Time.now,{default: order.when}, class:'ui dropdown'%>
    </div>
  </div>

  <%= form.hidden_field :game_id , value: game.id%>

  <div class="field">
    <%= form.submit "Book ngay", class: 'ui teal button' %>
  </div>
<% end %>
