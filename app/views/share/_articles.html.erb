<%= form_with(model: Post.new, local: true, html:{style: 'display:none'}, data:{article_id: sharable_id}, id: "article_share_form_#{sharable_id}") do |form| %>
    <%= form.hidden_field :sharable_type , value: "Article" %>
    <%= form.hidden_field :sharable_id , value: sharable_id %>
    <%= form.hidden_field :parent_id, value: 0%>
    <%= form.submit class: "ui button"%>
<% end %>